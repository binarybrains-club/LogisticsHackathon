---
import { Image } from "astro:assets";
import { Button } from "@/components/ui/button";
import logoImage from "@/assets/logo.jpg";
---
<nav class="bg-background fixed w-full z-20 top-0 start-0">
  <div class="max-w-screen-x1 flex flex-wrap items-center justify-between mx-auto py-2 px-4">
    <Image src={logoImage} alt="Binary brains logo" width="80" height="50" />

    <div class="flex items-center ml-auto space-x-4">
      <div id="navbar-sticky" class="hidden md:block md:w-auto">
        <ul class="flex flex-row gap-x-10 font-medium text-white">
          <li><a href="#" class="block py-2 px-3 hover:text-primary">Home</a></li>
          <li><a href="#" class="block py-2 px-3 hover:text-primary">About</a></li>
          <li><a href="#" class="block py-2 px-3 hover:text-primary">Challenges</a></li>
          <li><a href="#" class="block py-2 px-3 hover:text-primary">Sponsors</a></li>
        </ul>
      </div>

      <Button>Regístrate</Button>

      <button
        data-collapse-toggle="navbar-sticky"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
        aria-controls="navbar-sticky"
        aria-expanded="false"
      >
        <span class="sr-only">Abrir menú principal</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"
          />
        </svg>
      </button>
    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden bg-slate-800 border-t border-slate-700 shadow-lg">
    <div class="px-4 py-6 space-y-4">
      <ul class="space-y-3">
        <li>
          <a
            href="#"
            class="block py-3 px-4 text-white hover:bg-slate-700 hover:text-blue-400 rounded-lg transition-colors duration-200 font-medium"
          >
            Home
          </a>
        </li>
        <li>
          <a
            href="#"
            class="block py-3 px-4 text-white hover:bg-slate-700 hover:text-blue-400 rounded-lg transition-colors duration-200 font-medium"
          >
            About
          </a>
        </li>
        <li>
          <a
            href="#"
            class="block py-3 px-4 text-white hover:bg-slate-700 hover:text-blue-400 rounded-lg transition-colors duration-200 font-medium"
          >
            Challenges
          </a>
        </li>
        <li>
          <a
            href="#"
            class="block py-3 px-4 text-white hover:bg-slate-700 hover:text-blue-400 rounded-lg transition-colors duration-200 font-medium"
          >
            Sponsors
          </a>
        </li>
      </ul>

      <div class="pt-4 border-t border-slate-700">
        <Button>
          Regístrate
        </Button>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggleBtn = document.querySelector("[data-collapse-toggle]");
    const mobileMenu = document.getElementById("mobile-menu");

    toggleBtn.addEventListener("click", () => {
      // Alternar el menú móvil
      mobileMenu.classList.toggle("hidden");

      const isExpanded = !mobileMenu.classList.contains("hidden");
      toggleBtn.setAttribute("aria-expanded", isExpanded.toString());
    });
  });
</script>
