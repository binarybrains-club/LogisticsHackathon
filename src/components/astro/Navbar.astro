<!-- Script para manejar el toggle del men√∫ hamburguesa xd ü§ì‚òùÔ∏è-->
<script>
  // Esperar a que el DOM est√© completamente cargado
  document.addEventListener("DOMContentLoaded", () => {
    // Obtener el bot√≥n de toggle por su atributo data-collapse-toggle
    const toggleBtn = document.querySelector("[data-collapse-toggle]");
    // Obtener el men√∫ m√≥vil
    const mobileMenu = document.getElementById("mobile-menu");

    // Agregar event listener al bot√≥n hamburguesa brooooow üçî
    toggleBtn.addEventListener("click", () => {
      // Alternar el men√∫ m√≥vil
      mobileMenu.classList.toggle("hidden");

      const isExpanded = !mobileMenu.classList.contains("hidden");
      toggleBtn.setAttribute("aria-expanded", isExpanded.toString());
    });
  });
</script>
